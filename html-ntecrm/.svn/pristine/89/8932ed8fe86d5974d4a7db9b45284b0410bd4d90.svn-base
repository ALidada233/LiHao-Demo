          component: () => import('@/page/admin/operator/index')
        },
        {
          path: 'role',
          name: 'role',
          component: () => import('@/page/admin/role/index')
        },
        {
          path: 'message',
          name: 'message',
          component: () => import('@/page/admin/message/index')
        },
        {
          path: 'info',
          name: 'info',
          component: () => import('@/page/admin/info/index')
        },
         {
          path: 'region',
