})
//router.addRoutes( ])
// 判断是否需要登录权限 以及是否登录
 router.beforeEach((to, from, next) => {
   if (to.name!="Login") {// 判断是否需要登录权限
     if (sessionStorage.getItem('c_token')) {// 判断是否登录
       next()
     } else {// 没登录则跳转到登录界面
       next({
         path: '/'
       })
     }
   } else {
     next()
   }
})

export default router