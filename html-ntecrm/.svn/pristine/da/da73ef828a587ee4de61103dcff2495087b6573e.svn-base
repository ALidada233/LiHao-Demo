<script>
  import {
    getTechnicalSupportByDto,
    insertTechnicalSupport
  } from "util/req/TechnicalSupport/index"
  export default {
    name: "discuss",
    props: {
      type: {
        type: Number
      },
      discussMsg: {
        type: Object
      }
    },
    data() {
      return {
        disMsg: {},
        enclosureVisible: false,
        replyVisible: false,
        fileType: null,
        fileUrl: null,
        form: {
          remark: null,
          type: 1
        },
        selectdReply: {},
        fileList: []
      }
    },
    watch: {
      'form.type': function () {
        this.fileList = []
      }
    },
    methods: {
      handleRemoveFile(file) {
        this.file = null;
        this.fileList = [];
      },
      handlePreview(file) {
        console.log(file);
      },
      handleExceed(files) {
        this.$message.warning('当前只允许传输一个文件');
      },
      beforeRemove(file) {
        return this.$confirm(`确定移除 ${ file.name }？`);
      },
      successUploadFile(response, file) {
        this.fileList = [{
          name: file.name,
          url: response.data.url
        }]
      },
      getTechnicalSupportByDto() { //获取评论信息
        var parmas = {
          beId: this.discussMsg.beId,
          type: this.type
        }
        getTechnicalSupportByDto(parmas, res => {
          console.log(res)
          this.disMsg = res.data[0];
        })
      },
      viewsFile(file) { //预览文件
        this.enclosureVisible = true;
        var fileIndex = file.lastIndexOf(".");
        var suffix = file.substring(fileIndex + 1, this.fileUrl.length);
        if (suffix == "pdf") {
          this.fileType = "pdf"
        }
        this.fileUr = file;
      },
      closeEnclosure() { //关闭预览弹窗
        this.enclosureVisible = false;
      },
      closeReply() { //关闭回复评论弹窗
        this.replyVisible = false;
        this.fileList = [];
        this.form = {};
        this.selectdReply = {};
      },
      replyMsg(row) { //回复弹窗
        this.replyVisible = true;
        this.selectdReply = row;
      },
      confirmReply() { //确认回复评论  
        if (!this.form.remark) {
          this.$message({
            message: '回复内容不能为空',
            type: 'warning'
          });
          return
        }
        var parmas = {
          beId: this.selectdReply.beId, //关联ID 
          type: this.type, //类型1售前2调试3售后
          remark: this.form.remark, //内容
          pId: this.selectdReply.id
        }
        if (this.fileList.length > 0) {
          parmas.optFile = this.fileList[0].url; //文件信息 
        }
        insertTechnicalSupport(parmas, res => {
          if (res.msgCode == 200) {
            this.$message({
              type: 'success',
              message: res.msg
            });
            this.getTechnicalSupportByDto();
            this.closeReply();
          } else {
            this.$message({
              type: 'info',
              message: res.msg
            });
          }
        })
      }
    },
    mounted() {
      this.getTechnicalSupportByDto();
    }
  }

</script>
