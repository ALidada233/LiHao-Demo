<script type="text/javascript">
import regionEdit from "@/page/admin/region/components/regionEdit"
// import accredit from "@/page/admin/role/components/accredit"
import {queryOrderList} from "util/req/order/index"
	export default{
		name:'order',
		data(){
			return{
		        value: '',
		        dataList: [{
		        	dscribe:null,
		        	name:null
		          }],
		        loading: false,		//表格数据加载样式
		        currentId:null,
		        editButton:true,	 //编辑按钮状态
		        editShow:false,
		        editState:false,	//编辑&新增状态
		        accreditShow:false,	//授权状态
		        loading:false,
		        currentPage:1,
		        pageSize:10,
		        pageCount:null,
				editList:null,
				orderStatus:null,
				searchContent:null,
				sendTitle:true,
				heTongVisible:false,
				pdfFile:null
			}
		},
		watch: {
			currentId(val){     //表格数据选中处理
				if(val!=null){
					this.editButton=false
				}else{
					this.editButton=true
				}
			}
		},
		methods:{
			handleClick(tab){
				if(tab.index==0){
					this.orderStatus=null;
				}else{
					this.orderStatus=(tab.index-1)+'';
				}
				this.queryOrderList()
			},
			changeSelect(id){
				if(this.currentId!=id){
		      		this.currentId=id;
			      	this.dataList.map((item)=>{
			      		if(this.currentId!=item.id){
			      			item.selected=false;
			      		}else{
			      			item.selected=true;
			      		}
			      		return item
			      	})
			    }else if(this.currentId==id){
			      	this.currentId=null;
			      	this.dataList.map((item)=>{		      		
			      		item.selected=false;
			      		return item
			      	})
			    }
			},
			closeEdit(state){
				this.editShow=state;
				this.queryOrderList();
			},
			editHandle(state){
				console.log(state);
				this.editShow=true;
				if(state){
					this.editState=true
				}else{
					this.editState=false
				}
			},
			closeAccredit(state){
				this.accreditShow=state
			},
			handleSizeChange(pageSize){	//数据条数改变时
		      	this.loading=true;
		      	this.pageSize=pageSize;
		      	this.currentPage=1;
		      	this.queryOrderList();
		    },
		    handleCurrentChange(currentPage){	//选取分页
		      	this.loading=true;
		      	this.queryOrderList();
		    },
			queryOrderList(){	//查询角色管理列表
				var parmas={
					pageSize:this.pageSize,
					page:this.currentPage,
					orderStatus:this.orderStatus
				};
				if(this.searchContent){
					parmas.keys=this.searchContent
				}
				queryOrderList(parmas,res=>{
					this.loading=true;
					if(res.msgCode==200){
						console.log(res);
						this.dataList=res.data.list;
						this.pageCount=res.data.pageCount;
						setTimeout(()=>{
							this.loading=false;
						},200)
					}else{
						setTimeout(()=>{
							this.loading=false;
						},200)
					}
				})
			},
			editRole(row,state){			//编辑角色
				this.editShow=true;
				if(state){
					this.editState=true;
					this.editList=JSON.parse(JSON.stringify(row));
				}else{
					this.editState=false
				}				
			},
			viewContract(row,state){
				this.heTongVisible=true;
				if(state==1){
					this.sendTitle=false
					this.pdfFile=row.offerFile
				}else{
					this.sendTitle=true
					this.pdfFile=row.contractFile
				}
			}
		},
		components:{
			regionEdit
			// accredit
		},
		mounted(){
			if(this.$route.query.createTimeStart){
				this.createTimeStart=this.$route.query.createTimeStart;
				this.createTimeEnd=this.$route.query.createTimeEnd;
				this.loading = true;
				var params = {
				pageSize: this.pageSize, //每页数量
				page: this.currentPage, //当前页	
				createTimeStart:this.createTimeStart+' 00:00:00',
				createTimeEnd:this.createTimeEnd+' 23:59:59'
				};
				queryOrderList(params,res=>{
					this.loading=true;
					if(res.msgCode==200){
						console.log(res);
						this.dataList=res.data.list;
						this.pageCount=res.data.pageCount;
						setTimeout(()=>{
							this.loading=false;
						},200)
					}else{
						setTimeout(()=>{
							this.loading=false;
						},200)
					}
				})
			}else{
				this.queryOrderList();
			}
			 //去掉又客户需求跳转进来的需求带公司名称
			var currentUrl = window.location.href;
			var targetUrl = currentUrl.split("?")[0];
			window.location.href = targetUrl;
		}
	}
</script>
