  .purchaseInquiry{
    background:#fff;
    padding: 20px;
    border-radius: 4px;
  }
  .purchaseInquiry /deep/ ::-webkit-scrollbar {
    height: 9px;
    width: 7px;
  }
  .purchaseInquiry /deep/ .el-dialog{
    margin-top: 10px!important;
  }
</style>