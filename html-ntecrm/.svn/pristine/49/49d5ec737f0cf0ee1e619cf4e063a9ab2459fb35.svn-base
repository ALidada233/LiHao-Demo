      },
      handleExceed(files) {
        this.$message.warning('当前只允许传输一个文件');
      },
      beforeRemove(file) {
        return this.$confirm(`确定移除 ${ file.name }？`);
      },
      successUploadFile(response, file) {
        var params = {
          name: response.data.url,
