<script>
  import {
    getTechnicalSupportByDto,
    insertTechnicalSupport,
    updateTechnicalSupport
  } from "util/req/TechnicalSupport/index";
  import {
    getBuyerTechnical
  } from "util/req/offerList/index";
  export default {
    name: "discuss",
    props: {
      type: {
        type: Number
      },
      id: {
        type: Number
      },
      activeTabs: {
        type: [String, Number]
      }
    },
    data() {
      return {
        disMsg: [],
        enclosureVisible: false,
        addReplyVisible: false,
        replyVisible: false,
        fileType: null,
        fileUrl: null,
        form: {
          remark: null,
          type: 1,
          isShield:0
        },
        selectdReply: {},
        fileList: [],
        roleId: JSON.parse(sessionStorage.getItem('userDto')).roleId || null,
        formAdd: {
          remark: null,
          type: 1,
          isTop: 0,
          isSMS: 0,
          isShield:0,
          buyerId: [],
          technicalId: []
        },
        addReplyVisible: false, //新增弹窗
        buyerList: [], //采购列表
        technicalList: [] //技术列表
      }
    },
    watch: {
      'form.type': function () {
        this.fileList = []
      },
      activeTabs(tabs) {
        if (tabs == this.type) {
          this.getTechnicalSupportByDto();
        }
      }
    },
    methods: {
      handleRemoveFile(file) {
        this.file = null;
        this.fileList = [];
      },
      handlePreview(file) {
        console.log(file);
      },
      handleExceed(files) {
        this.$message.warning('当前只允许传输一个文件');
      },
      beforeRemove(file) {
        return this.$confirm(`确定移除 ${ file.name }？`);
      },
      successUploadFile(response, file) {
        this.fileList = [{
          name: file.name,
          url: response.data.url
        }]
      },
      getTechnicalSupportByDto() { //获取评论信息
        var parmas = {
          beId: this.id,
          type: this.type
        }
        getTechnicalSupportByDto(parmas, res => {
          var newItem = res.data.map((item, index) => {
            if (index == 0) {
              item.foldStatus = true;
            } else {
              item.foldStatus = false;
            }
            return item;
          })
          this.disMsg = newItem;
          //默认先将第一条的信息置为已读
          if(newItem.length==0){return}
          var parmas={
              beId:newItem[0].beId,
              type:this.type
          };
          updateTechnicalSupport(parmas, res => {
            if (res.msgCode != 200) {
              this.$message({
                type: 'info',
                message: res.msg
              });
            }
          })
        })
      },
      viewsFile(file) { //预览文件
        this.enclosureVisible = true;
        var fileIndex = file.lastIndexOf(".");
        var suffix = file.substring(fileIndex + 1);
        if (suffix == "pdf") {
          this.fileType = "pdf"
        }else{
          this.fileType=null;
        }
        this.fileUrl = file;
      },
      closeEnclosure() { //关闭预览弹窗
        this.enclosureVisible = false;
      },
      closeAddReply() { //关闭新增支持弹窗
        this.addReplyVisible = false;
        this.formAdd = { //清空表单内容
          remark: null,
          type: 1,
          isTop: 0,
          isSMS: 0,
          isShield:0,
          buyerId: [],
          technicalId: []
        };
        this.fileList = [];
      },
      closeReply() { //关闭回复评论弹窗
        this.replyVisible = false;
        this.fileList = [];
        this.form = {
          isShield:0
        };
        this.selectdReply = {};
      },
      replyMsg(row) { //回复弹窗
        this.replyVisible = true;
        this.selectdReply = row;
        this.form.isShield=row.isShield;
      },
      confirmReply() { //确认回复评论  
        if (!this.form.remark) {
          this.$message({
            message: '回复内容不能为空',
            type: 'warning'
          });
          return
        }
        var parmas = {
          beId: this.selectdReply.beId, //关联ID 
          type: this.type, //类型1售前2调试3售后
          remark: this.form.remark, //内容
          pId: this.selectdReply.id
        }
        //当身份不是技术时，才添加的屏蔽参数(上级为1时，下级为1，为0时自已选择)
        if(this.roleId!=41){
          if(this.selectdReply.isShield==1){
            parmas.isShield=1
          }else{
            parmas.isShield=this.form.isShield 
          }
        }
        if (this.fileList.length > 0) {
          parmas.optFile = this.fileList[0].url; //文件信息 
        }
        insertTechnicalSupport(parmas, res => {
          if (res.msgCode == 200) {
            this.$message({
              type: 'success',
              message: res.msg
            });
            this.getTechnicalSupportByDto();
            this.closeReply();
          } else {
            this.$message({
              type: 'info',
              message: res.msg
            });
          }
        })
      },
      insertTechnicalSupport() {
        var parmas = {
          beId: this.id, // 关联ID 
          type: this.type, //类型1售前2调试3售后
          remark: this.formAdd.remark, //内容
          isTop: this.formAdd.isTop, //是否置顶
          isSMS: this.formAdd.isTop, //是否通知 
          isShield:this.formAdd.isShield,//是否屏蔽
          buyerId: this.formAdd.buyerId.join('|'), //采购ID（多选|隔开）
          technicalId: this.formAdd.technicalId.join('|') //技术支持ID（多选|隔开）
        }
        if (this.fileList.length > 0) {
          parmas.optFile = this.fileList[0].url //文件信息 
        }
        insertTechnicalSupport(parmas, res => {
          if (res.msgCode == 200) {
            this.$message({
              type: 'success',
              message: res.msg
            });
            this.getTechnicalSupportByDto();
            this.closeAddReply();
          } else {
            this.$message({
              type: 'info',
              message: res.msg
            });
          }
        })
      },
      getBuyerTechnical() { //获取采购，技术人员列表
        getBuyerTechnical((res) => {
          this.buyerList = res.data.buyerList;
          this.technicalList = res.data.technicalList;
        })
      },
      completedSupport(id) {
        var parmas = {
          id: id, // 支持ID 
          status: 1 //状态1已完成
        }
        this.$confirm('是否确认此条支持已完成?', '提示', {
          confirmButtonText: '确定',
          cancelButtonText: '取消',
          type: 'warning'
        }).then(() => {
          updateTechnicalSupport(parmas, res => {
            if (res.msgCode == 200) {
              this.$message({
                type: 'success',
                message: res.msg
              });
              this.getTechnicalSupportByDto();
            } else {
              this.$message({
                type: 'info',
                message: res.msg
              });
            }
          })
        }).catch((err) => {
          this.$message({
            type: 'info',
            message: '已取消操作'
          });
          console.log(err)
        });
      },
      statusChange(foldStatus,status,row){ //改变此条信息的状态（未读改成待处理）
        console.log(foldStatus,status,row);
        if(foldStatus==true){  //二级信息展开的状态·且为未读信息0
          var parmas={
              batch:row.batch,
              id:row.id
          };
          updateTechnicalSupport(parmas, res => {
            if (res.msgCode != 200) {
              this.$message({
                type: 'info',
                message: res.msg
              });
            }
          })
        }
      }
    },
    mounted() {
      //this.getTechnicalSupportByDto();
    }
  }

</script>
